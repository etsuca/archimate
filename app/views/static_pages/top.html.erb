<% if @architecture.present? %>
  <div class="flex flex-col h-screen md:flex-row items-end">
    <div class="w-full md:w-3/4 h-full relative">
      <%= render 'shared/architecture', architecture: @architecture %>
    </div>
    <div class="w-full md:w-144 px-4 md:pt-0 pt-4">
      <h1 class="text-3xl md:text-5xl mb-4"><%= @architecture.name %></h1>
      <div class="relative my-2 md:my-8 mb-20">
        <%= link_to "https://maps.google.com/maps?q=#{@architecture.location}", target: :_blank do %>
          <div class="flex items-center hover:drop-shadow-lg">
            <p class="mr-2"><i class="fa-solid fa-map-pin"></i></p>
            <%= simple_format(@architecture.location) %>
          </div>
        <% end %>
        <div class="md:static bottom-5 w-full text-white">
          <div class="flex flex-row-reverse md:flex-col my-8 mb-28 text-center justify-center items-center">
            <%= link_to likes_path(architecture_id: @architecture.id), method: :post, class: 'flex items-center justify-center bg-third border border-seventh text-seventh h-14 w-14 md:h-fit md:w-full md:mb-8 mx-6 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' do %>
              <i class="fa-solid fa-heart fa-xl md:text-sm md:mr-2"></i>
              <div class="hidden md:block">
                <p>Like</p>
              </div>
            <% end %>
            <%= link_to root_path, method: :get, class: 'flex items-center justify-center bg-third md:bg-first border border-first text-first md:text-white h-14 w-14 md:w-full md:h-fit mx-6 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' do %>
              <i class="fa-solid fa-rotate-right fa-xl md:text-sm md:mr-2"></i>
              <div class="hidden md:block">
                <p>Reload</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <p><%= t('.no_result') %></p>
<% end %>