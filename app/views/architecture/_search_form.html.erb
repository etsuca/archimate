<%= form_with url: url, method: :get, id: 'search-form' do |f| %>
  <div class="flex flex-col justify-center mb-6 text-xs">
    <form class="flex">
      <div class="w-full mb-2">
        <%= f.search_field :keyword, id: 'search-field', placeholder: t('defaults.message.keywords'), class: 'w-full px-4 py-1 text-sm rounded-full focus:border-transparent focus:ring-2 focus:ring-second' %>
      </div>
      <div class="w-full mb-2">
        <%= f.select :pref, all_prefectures_options, { include_blank: '都道府県を選択', class: 'text-second' }, id: 'pref-select', class: 'w-full px-4 py-1 text-sm rounded-full focus:border-transparent focus:ring-2 focus:ring-second' %>
      </div>
      <div class="flex px-4 py-1 mb-2 w-full bg-second text-center rounded-full hover:scale-105 hover:shadow-lg">
        <%= button_tag type: "submit", class: "w-full" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
          <a>Search</a>
        <% end %>
      </div>
      <div class="flex flex-wrap">
        <label class="flex items-center mr-4 mb-2">
          <%= f.radio_button :category, 'visited_architecture', id: 'visited-radio', class: 'form-radio' %>
          <span class="ml-2"><%= t('architecture.index.Visited Architecture') %></span>
        </label>
        <label class="flex items-center mr-4 mb-2">
          <%= f.radio_button :category, 'others_architecture', id: 'others-radio', class: 'form-radio' %>
          <span class="ml-2"><%= t('architecture.index.Others Architecture') %></span>
        </label>
        <label class="flex items-center mb-2">
          <%= f.radio_button :category, 'liked_architecture', id: 'liked-radio', class: 'form-radio' %>
          <span class="ml-2"><%= t('architecture.index.Liked Architecture') %></span>
        </label>
      </div>
      <div class="flex flex-wrap">
        <% Tag.all.each do |tag| %>
          <label class="flex items-center mr-2 mb-2">
            <input type="checkbox" name="tag_ids[]" value="<%= tag.id %>" class="tag-button form-checkbox hidden">
            <button type="button" class="tag-button px-2 py-1 rounded-full border border-gray-300 text-gray-600">
              <a># <%= tag.name %></a>
            </button>
          </label>
        <% end %>
      </div>
    </form>
  </div>
<% end %>