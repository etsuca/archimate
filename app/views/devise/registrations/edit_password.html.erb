<% set_meta_tags title: t('.title') %>
<div class='container mx-auto'>
  <div class='max-w-md mx-auto p-4'>
    <%= form_for(resource, as: resource_name, url: registrations_update_password_path, html: { method: :put }) do |f| %>
      <div class="flex relative justify-center items-center py-12 md:pt-24">
        <h2 class="text-base md:text-xl"><%= t('.title') %></h2>
        <%= link_to user_path, class: "absolute right-0 text-xl" do %>
          <span class="fa-stack">
            <i class="fa-solid fa-rotate-left text-2xl fa-stack-1x"></i>
          </span>
        <% end %>
      </div>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <div class="space-y-2">
        <%= f.label :password, '新しいパスワード', class: "mt-8 block text-md text-neutral-600" %>
        <%= f.password_field :password, placeholder: "New Password", class: "block w-full px-5 py-3 text-neutral-600 placeholder-gray-300 transition duration-200 border border-transparent rounded-full bg-gray-50 focus:border-transparent focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", required:true %>
      </div>
      <div class="space-y-2">
        <%= f.label :password_confirmation, '新しいパスワード (確認)', class: "mt-8 block text-md text-neutral-600" %>
        <%= f.password_field :password_confirmation, placeholder: "New Password Confirmation", class: "block w-full px-5 py-3 text-neutral-600 placeholder-gray-300 transition duration-200 border border-transparent rounded-full bg-gray-50 focus:border-transparent focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", required:true %>
      </div>
      <div class='flex justify-center mb-24'>
        <%= f.submit class: "mt-16 py-4 w-full bg-first text-white transition duration-200 hover:scale-105 rounded-full cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>