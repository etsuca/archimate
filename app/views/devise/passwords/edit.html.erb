<% set_meta_tags title: t('.title') %>
<h2 class="px-16 pt-16 text-xl text-center"><%= t('.title') %></h2>
<section>
  <div class="p-12 md:p-24">
    <div class="max-w-md mx-auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-2 text-md text-neutral-600">
          <%= f.label :password, (t '.New Password') %>
          <% if @minimum_password_length %>
            <a>(<%= @minimum_password_length %><%= (t 'defaults.characters minimum') %>)</a>
          <% end %>
          <%= f.password_field :password, placeholder: "New Password", autocomplete: "new-password", class: "block w-full px-5 py-3 text-neutral-600 placeholder-gray-300 transition duration-200 border border-transparent rounded-full bg-gray-50 focus:border-transparent focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", required:true %>
        </div>

        <div class="space-y-2">
          <%= f.label :password_confirmation, (t '.Confirm New Password'), class: "mt-8 block text-md text-neutral-600" %>
          <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "block w-full px-5 py-3 text-neutral-600 placeholder-gray-300 transition duration-200 border border-transparent rounded-full bg-gray-50 focus:border-transparent focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", required:true %>
        </div>

        <div class="actions">
          <%= f.submit (t '.Change my password'), class: "mt-16 py-4 w-full bg-first text-white transition duration-200 hover:scale-105 rounded-full cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</section>